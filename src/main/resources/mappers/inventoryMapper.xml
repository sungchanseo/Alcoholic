<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
                     
  <mapper namespace="com.itwillbs.mappers.inventoryMapper">
       
  
  
   <!-- 재고목록 조회  -->              
      <select id="getInventoryList" resultType="com.itwillbs.domain.MaterialVO">
        select * from material
      </select>
   <!-- 재고정보 목록 조회  -->
   <!-- 재고목록 아이디값 가져오기  -->
       <select id="modifyInventoryID" resultType="com.itwillbs.domain.MaterialVO">
		select * from material 
		where ma_id = #{ma_id}
    	</select>
   
   <!-- 재고목록 아이디값 가져오기  -->

      <!-- 재고정보 목록 수정  -->

      <update id="modifyInventory">
         update material set ma_qty=#{ma_qty} 
         where ma_id=#{ma_id} and ma_qty =""
      
      </update>
      <insert id="insertInventory">
         insert into material (ma_id, ma_name, unit_cost, whs_num, shelt_position, ma_image, ma_regdate, ma_emp, ma_qty)
	     values (#{ma_id}, #{ma_name}, #{unit_cost}, #{whs_num}, #{shelt_position}, #{ma_image}, now(), #{ma_emp}, 0) 
      </insert>
      <!-- 재고정보 목록 수정  -->
      </mapper>